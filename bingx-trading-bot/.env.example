# BingX API Credentials
# Get your API keys from: https://bingx.com/en-us/account/api/
BINGX_API_KEY=your_api_key_here
BINGX_API_SECRET=your_api_secret_here

# Use testnet for testing (recommended)
# Testnet: https://bingx.com/en-us/support/announcement/testnet-announcement/
BINGX_TESTNET=true

# Trading Configuration
TRADING_ENABLED=false
DRY_RUN=true

# Database
DATABASE_URL=sqlite:///./data/trades.db
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/trading

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/trading-engine.log

# Risk Management
MAX_PORTFOLIO_RISK=5.0
MAX_DRAWDOWN=10.0
MAX_DAILY_LOSS_PCT=5.0

# Emergency Stop
# Create this file to halt all trading immediately
STOP_FILE=./STOP
EMERGENCY_STOP_ENABLED=true
