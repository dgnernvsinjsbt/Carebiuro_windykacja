# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Fakturownia API
FAKTUROWNIA_API_TOKEN=your-api-token-here
FAKTUROWNIA_ACCOUNT=your-account-name

# Cron Job Security (REQUIRED for production)
# Generate a strong random secret: openssl rand -base64 32
CRON_SECRET=your-random-secret-here

# Application URL (for cron scripts)
APP_URL=http://localhost:3000

# n8n Webhook URLs (optional - configure if using n8n for sending notifications)
N8N_WEBHOOK_EMAIL=https://your-n8n-instance.com/webhook/email
N8N_WEBHOOK_SMS=https://your-n8n-instance.com/webhook/sms
N8N_WEBHOOK_WHATSAPP=https://your-n8n-instance.com/webhook/whatsapp

# SMS Planet API
SMSPLANET_API_TOKEN=your-sms-planet-bearer-token
SMSPLANET_FROM=Cbb-Office
